<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hackathon.lifestyle.group6.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20mm"
            android:id="@+id/cardView"
            >

            <!-- カードに載せる情報 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >
                <TextView android:id="@+id/where1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="パーティ"

                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"

                    android:textSize="28sp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_horizontal" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_horizontal" >

                    <TextView android:id="@+id/where1_event1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="六本木 街コン"
                        android:textSize="18sp" />

                    <Button android:id="@+id/event1_button1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="..." />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_horizontal" >

                    <TextView android:id="@+id/where1_event2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="赤坂 街コン"
                        android:textSize="18sp" />

                    <Button android:id="@+id/event1_button2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="..." />
                </LinearLayout>

                <Button android:id="@+id/event1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="more"

                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"

                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_horizontal"
                    style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2mm"
            android:id="@+id/cardView2">

            <!-- カードに載せる情報 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >
                <TextView android:id="@+id/where2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ヨガ"

                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"

                    android:textSize="28sp"
                    android:layout_marginTop="1mm"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_horizontal" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_horizontal" >

                    <TextView android:id="@+id/where2_event1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="六本木 ヨガ"
                        android:textSize="18sp" />

                    <Button android:id="@+id/event2_button1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="..." />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_horizontal" >

                    <TextView android:id="@+id/where2_event2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="赤坂 ヨガ"
                        android:textSize="18sp" />

                    <Button android:id="@+id/event2_button2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="..." />
                </LinearLayout>

                <Button android:id="@+id/event2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="more"

                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"

                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_horizontal"
                    style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog" />
            </LinearLayout>
            <!--
            <Button android:id="@+id/next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="next"

                style="@style/Widget.AppCompat.Button.Colored" />
                -->

        </android.support.v7.widget.CardView>

    </LinearLayout>
</FrameLayout>